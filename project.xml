<?xml version="1.0" encoding="utf-8"?>
<project>

    <!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
    <meta title="Nape Samples" package="com.drkibitz.napesamples" version="1.0.0" company="Dr. Kibitz" />

    <!-- output -->
    <app file="NapeSamples" main="com.drkibitz.napesamples.Main" path="Export" />

    <window fps="60" background="#222222"/>
    <window width="0" height="0" if="html5" />

    <!-- classpath, haxe libs -->
    <source path="Source" />
    <haxelib name="openfl" />
    <haxelib name="nape" />

    <!-- assets -->
    <assets path="Assets" rename="assets" exclude="*.svg" />
    <icon path="Assets/icon.svg" />

    <!-- optimize output -->
    <haxeflag name="-dce std" />

    <haxedef name="NAPE_RELEASE_BUILD"/>
    <haxedef name="NAPE_NO_INLINE" if="neko" />

